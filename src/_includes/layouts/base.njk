<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{config.title}}</title>

  {% if config.development %}
  <link rel="stylesheet" href="/styles/main.css">
  {% else %}
  <style>{% include "styles/main.css" %}</style>
  {% endif %}

  {% if resolvedUrl and resolvedUrl.status === 'ok' %}
  <meta http-equiv="Refresh" content="2; url='{{ resolvedUrl.target }}'" />
  {% endif %}
  <meta name="generator" content="{{ eleventy.generator }}">
  <meta name="description" content="{{config.description}}">
</head>
<body>
  {% block content %}
    <div class="container">
      <div class="content flow flow-space-500">
        <a href="/" class="logo" aria-label="Unravel">{% include 'logo.svg' %}</a>
        {{ content | safe }}
      </div>
    </div>
  {% endblock %}
</body>
</html>
