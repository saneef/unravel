---
layout: layouts/base.njk
permalink:
  dynamic:
    - /
---
<div class="flow-space-700">
  <form class="form" action="/">
    <label for="url">URL</label>
    <input id="url" name="url" type="url" value="{{value}}"{% if not resolvedUrl %} autofocus{% endif %}>
    <input type="submit" value="Go">
  </form>
</div>

{% if resolvedUrl and resolvedUrl.status === 'ok' %}
  <p class="result">
    <a class="button" href="{{ resolvedUrl.target }}">ðŸ”— Resolved URL â†’</a>
  </p>
  <p class="result">
    Redirecting to
    <a href="{{ resolvedUrl.target }}">{{ resolvedUrl.formattedTarget }}</a>
    in 2 seconds...
  </p>
{% elif resolvedUrl and resolvedUrl.status === 'error' %}
  <p class="result">
    <span class="error">Unable to resolve URL:</span> {{ resolvedUrl.formattedSource }}.
  </p>
{% elif not resolvedUrl %}
  <hr class="flow-space-700">
  <div class="flow-space-700">
    <div class="flow-space-400">
      {% include "faqs.njk" %}
    </div>
  </div>
{% else %}
  <hr class="flow-space-700">
{% endif %}

<div class="flow-space-600">
  <div class="flow-space-400">
    {% include "footer.njk" %}
  </div>
</div>
