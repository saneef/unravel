---
layout: layouts/base.njk
permalink:
  dynamic:
    - /
---
<div class="flow-space-700">
  <form class="form" action="/">
    <label for="url">URL</label>
    <input id="url" name="url" type="url" value="{{value}}"{% if not resolvedUrl %} autofocus{% endif %}>
    <input type="submit" value="Go">
  </form>
</div>

{% if resolvedUrl %}
  <p class="result">
    <a class="button" href="{{ resolvedUrl }}">ðŸ”— Resolved URL â†’</a>
  </p>
  <p class="result">
    Redirecting to
    <a href="{{ resolvedUrl }}">{{ resolvedUrl}}</a>
    in 2 seconds...
  </p>
{% endif %}

<hr class="flow-space-700">

{% if not resolvedUrl %}
  <div class="flow-space-700">
    <div class="flow-space-400">
      {% include "faqs.njk" %}
    </div>
  </div>
{% endif %}
<div class="flow-space-600">
  <div class="flow-space-400">
    {% include "footer.njk" %}
  </div>
</div>
