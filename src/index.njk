---
layout: base.njk
permalink:
  dynamic:
    - /
---

{% set value = "" %}
{% if eleventy.serverless and eleventy.serverless.query.url %}
  {% set value = eleventy.serverless.query.url %}
{% endif %}

<div class="container">
  <div class="content">
    <h1>{{config.title}}</h1>
    <form class="form" action="/">
      <label for="url">URL</label>
      <input id="url" name="url" type="url" value="{{value}}">
      <input type="submit" value="Go">
    </form>

    {% if eleventy.serverless and eleventy.serverless.query.url %}
      <p class="result">{% resolveUrl eleventy.serverless.query.url %}</p>
    {% endif %}
  </div>
</div>
