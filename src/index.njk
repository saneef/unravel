---
layout: layouts/base.njk
permalink:
  dynamic:
    - /
---
<div class="container">
  <div class="content">
    <h1>{{config.title}}</h1>
    <form class="form" action="/">
      <label for="url">URL</label>
      <input id="url" name="url" type="url" value="{{value}}"{% if not resolvedUrl %} autofocus{% endif %}>
      <input type="submit" value="Go">
    </form>

    {% if resolvedUrl %}
      <p class="result">
        <a class="button" href="{{ resolvedUrl }}">ðŸ”— Resolved URL â†’</a>
      </p>
      <p class="result">
        Redirecting to
        <a href="{{ resolvedUrl }}">{{ resolvedUrl}}</a>
        in 2 seconds...
      </p>
    {% endif %}
  </div>
</div>
